<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- 상태바 -->
    <ImageView
        android:id="@+id/PROA_image"
        android:layout_width="420dp"
        android:layout_height="80dp"
        android:src="@drawable/proa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:contentDescription="PRO A Image" />

    <ImageView
        android:id="@+id/ARIGHT_image"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:contentDescription="ARIGHT Image"
        android:scaleType="fitCenter"
        android:src="@drawable/aright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/PROA_image" />

    <ImageView
        android:id="@+id/CIRCLE_image"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:contentDescription="CIRCLE Image"
        android:scaleType="fitCenter"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toBottomOf="@id/PROA_image" />

    <TextView
        android:id="@+id/COUNT_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="#F95454"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/PROA_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="220dp"/>

    <!-- 하단바 -->
    <View
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/top_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- T 버튼 이미지 -->
    <ImageView
        android:id="@+id/T_button_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-50dp"
        android:contentDescription="T Button Image" />
</androidx.constraintlayout.widget.ConstraintLayout>